<h2 class="ui center aligned blue medium icon header">
	<i class="circular blue users icon"></i>
	Let's Chat
</h2>
<div class="ui two colum grid">
	<div class="twelve wide column">
		<div class="ui  fluid raised card chatbox">
			<div class="content" id="messages">
				<div class="ui small feed" id="message_container">
			
					<%= render @messages %>
	
				</div>
			</div>
			<div class="extra content">
				<%= form_for(@message, html:{class:"ui reply form", role:"form"}, url: message_path, remote: true) do |f| %>
					<div class="field">
						<div class="ui fluid icon input">
							<%= f.text_field :body %>
							<%= f.button %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>

	<div class="four wide column">
		<div class="ui  fluid raised card chatbox">
			<div class="content">
				<div class="ui vertical pointing menu">
					<a class=" item">
						Home
					</a>
					<a class="item">
						Messages
					</a>
					<a class="item">
						Friends
					</a>
				</div>
			</div>
		</div>
	</div>
</div>